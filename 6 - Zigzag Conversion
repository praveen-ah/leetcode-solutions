class Solution:
    def convert(self, s: str, numRows: int) -> str:
        if numRows == 1 or numRows >= len(s):
            return s

        z = [''] * numRows
        rows = 0
        step = 1

        for char in s:
            z[rows] += char

            if rows == 0:
                step = 1
            elif rows == numRows-1:
                step = -1
            rows += step
        return "".join(z)


s = "PAYPALISHIRING"
numRows = 3
obj = Solution()
print(obj.convert(s, numRows))

'''
Example 1:
Input: s = "PAYPALISHIRING", numRows = 3
Output: "PAHNAPLSIIGYIR"

Example 2:
Input: s = "PAYPALISHIRING", numRows = 4
Output: "PINALSIGYAHRPI"

Example 3:
Input: s = "A", numRows = 1
Output: "A"
'''
